{
  "dburl": "mongodb://127.0.0.1/posts",
  "pages":[
    "posts"
  ],
  "resources": {
    "posts": {
      "desc": "posts",
      "collection": "posts",
      "admin": true,
      "param": "post",
      "clean": {},
      "exclude": false,
      "schema": {
        "title": {
          "tag": "input",
          "type": "text",
          "active": true,
          "text": "Title",
          "name": "title",
          "placeholder": "Title",
          "required": true
        },
        "subtitle": {
          "tag": "input",
          "type": "text",
          "active": true,
          "text": "Subtitle",
          "name": "subtitle",
          "placeholder": "Subtitle",
          "required": true
        },
        "author": {
          "tag": "input",
          "type": "text",
          "active": true,
          "text": "Author",
          "name": "author",
          "placeholder": "Author",
          "required": true,
          "autofocus": true
        },
        "profile": {
          "tag": "input",
          "type": "url",
          "active": true,
          "text": "Profile",
          "name": "profile",
          "placeholder": "Profile URL",
          "required": true
        },
        "summary": {
          "tag": "textarea",
          "type": "text",
          "active": true,
          "text": "Summary",
          "name": "summary",
          "placeholder": "Markdown Summary",
          "class": "form-control"
        },
        "content": {
          "tag": "textarea",
          "type": "text",
          "active": true,
          "text": "Content",
          "name": "content",
          "placeholder": "Markdown Content",
          "class": "form-control"
        },
        "date": {
          "tag": "input",
          "type": "datetime",
          "active": true,
          "text": "Date",
          "name": "date",
          "placeholder": "Creation Date",
          "required": true
        },
        "image": {
          "tag": "image",
          "active": true,
          "text": "Image",
          "name": "image",
          "placeholder": "Background Image",
          "required": false
        },
        "order": {
          "tag": "input",
          "type": "number",
          "active": true,
          "text": "Order",
          "name": "order",
          "required": true,
          "min": 0,
          "placeholder": "Order"
        }
      }
    }
  }
}
