.post(id="{{item._id}}")
  h2.post-title {{item.title}}
  h3.post-subtitle(ng-show="item.more") {{item.subtitle}}
  p.post-info
    a.btn.btn-success(href="/posts/{{item._id}}", ng-if="token")
      i.fa.fa-edit.fa-lg  Edit
    a(href="/posts/#/{{item._id}}")
      i.fa.fa-link.fa-lg
    |  Posted by 
    a(href="{{item.profile}}") {{item.author}}
    |  on {{item.date}}
  .post-summary
  .post-content
